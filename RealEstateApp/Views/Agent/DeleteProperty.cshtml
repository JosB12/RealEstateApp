@model RealEstateApp.Core.Application.ViewModels.SavePropertyViewModel

@{
    ViewData["Title"] = "Confirmar Eliminación";
}

<div class="container my-5">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-danger">@ViewData["Title"]</h2>
            <div class="alert alert-warning">
                ¿Está seguro que desea eliminar la propiedad con el Id @Model.Id?
            </div>
            <div class="d-flex justify-content-end">
                <form method="post" asp-action="ConfirmDelete" asp-route-id="@Model.Id">
                    <button type="submit" class="btn btn-danger me-2">Eliminar</button>
                </form>
                <a href="@Url.Action("PropertyMaintenance", "Agent")" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>
    </div>
</div>
