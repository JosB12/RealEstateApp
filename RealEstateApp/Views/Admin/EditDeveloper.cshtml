@model RealEstateApp.Core.Application.ViewModels.User.EditDeveloperViewModel

@{
    ViewData["Title"] = "Editar Developer";
}

<h2>Editar Developer</h2>

<!-- Mensajes de éxito o error -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<!-- Formulario para editar un developer -->
<form asp-action="EditDeveloper" method="post">
    <!-- Campo oculto para el ID del developer -->
    <input type="hidden" asp-for="Id" />

    <!-- Campo para el nombre -->
    <div class="form-group">
        <label asp-for="FirstName" class="control-label">Nombre <span class="text-danger">*</span></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <!-- Campo para el apellido -->
    <div class="form-group">
        <label asp-for="LastName" class="control-label">Apellido <span class="text-danger">*</span></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <!-- Campo para identificación -->
    <div class="form-group">
        <label asp-for="Identification" class="control-label">Identificación <span class="text-danger">*</span></label>
        <input asp-for="Identification" class="form-control" />
        <span asp-validation-for="Identification" class="text-danger"></span>
    </div>

    <!-- Campo para el correo electrónico -->
    <div class="form-group">
        <label asp-for="Email" class="control-label">Correo Electrónico <span class="text-danger">*</span></label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <!-- Campo para el nombre de usuario -->
    <div class="form-group">
        <label asp-for="UserName" class="control-label">Nombre de Usuario <span class="text-danger">*</span></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <!-- Campo para la contraseña -->
    <div class="form-group">
        <label asp-for="Password" class="control-label">Contraseña</label>
        <input asp-for="Password" type="password" class="form-control" />
        <small class="form-text text-muted">
            Deja este campo vacío si no deseas cambiar la contraseña.
        </small>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <!-- Campo para confirmar la contraseña -->
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label">Confirmar Contraseña</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <!-- Botones de acción -->
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="DeveloperList" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <!-- Scripts para validación de cliente -->
    <partial name="_ValidationScriptsPartial" />
}
