@model RealEstateApp.Core.Application.ViewModels.DashBoardAdminViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Dashboard del Administrador</h2>

        <div class="row text-center">
            <!-- Propiedades -->
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h5 class="card-title">Propiedades Disponibles</h5>
                        <p class="card-text fs-4">@Model.TotalPropertiesAvailable</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h5 class="card-title">Propiedades Vendidas</h5>
                        <p class="card-text fs-4">@Model.TotalPropertiesSold</p>
                    </div>
                </div>
            </div>

            <!-- Agentes -->
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h5 class="card-title">Agentes Activos</h5>
                        <p class="card-text fs-4">@Model.TotalAgentsActive</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-secondary text-white">
                    <div class="card-body">
                        <h5 class="card-title">Agentes Inactivos</h5>
                        <p class="card-text fs-4">@Model.TotalAgentsInactive</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row text-center mt-4">
            <!-- Clientes -->
            <div class="col-md-3">
                <div class="card bg-warning text-dark">
                    <div class="card-body">
                        <h5 class="card-title">Clientes Activos</h5>
                        <p class="card-text fs-4">@Model.TotalClientsActive</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-body">
                        <h5 class="card-title">Clientes Inactivos</h5>
                        <p class="card-text fs-4">@Model.TotalClientsInactive</p>
                    </div>
                </div>
            </div>

            <!-- Desarrolladores -->
            <div class="col-md-3">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <h5 class="card-title">Desarrolladores Activos</h5>
                        <p class="card-text fs-4">@Model.TotalDevelopersActive</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-light text-dark">
                    <div class="card-body">
                        <h5 class="card-title">Desarrolladores Inactivos</h5>
                        <p class="card-text fs-4">@Model.TotalDevelopersInactive</p>
                    </div>
                </div>
            </div>
        </div>

        
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
