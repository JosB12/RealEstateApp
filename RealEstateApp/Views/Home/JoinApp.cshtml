@model RealEstateApp.Core.Application.ViewModels.User.SaveUserViewModel

@{
    ViewData["Title"] = "Registro de Usuario";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link rel="stylesheet" href="~/css/home.css" />

<div class="container joinapp-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm joinapp-card">
                <div class="card-body joinapp">
                    <h2 class="text-center mb-4 joinapp-title">
                        <i class="fas fa-user"></i> @ViewData["Title"]
                    </h2>

                    <!-- Mostrar errores generales -->
                    @if (Model.HasError)
                    {
                        <div class="alert alert-danger joinapp-alert">
                            <strong>@Model.Error</strong>
                        </div>
                    }

            <!-- Formulario de registro -->
            <form method="post" asp-action="JoinApp" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="FirstName">Nombre</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                        <div class="form-group mb-3 joinapp-form-group">
                            <label asp-for="LastName" class="form-label joinapp-label">Apellido</label>
                            <input asp-for="LastName" class="form-control joinapp-input" />
                            <span asp-validation-for="LastName" class="text-danger joinapp-validation"></span>
                        </div>

                        <div class="form-group mb-3 joinapp-form-group">
                            <label asp-for="Phone" class="form-label joinapp-label">Teléfono</label>
                            <input asp-for="Phone" class="form-control joinapp-input" />
                            <span asp-validation-for="Phone" class="text-danger joinapp-validation"></span>
                        </div>

                <div class="mb-3">
                    <label asp-for="Photo" class="form-label">Foto</label>
                    <input type="file" asp-for="Photo" class="form-control" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>

                        <div class="form-group mb-3 joinapp-form-group">
                            <label asp-for="Username" class="form-label joinapp-label">Nombre de Usuario</label>
                            <input asp-for="Username" class="form-control joinapp-input" />
                            <span asp-validation-for="Username" class="text-danger joinapp-validation"></span>
                        </div>

                        <div class="form-group mb-3 joinapp-form-group">
                            <label asp-for="Email" class="form-label joinapp-label">Correo Electrónico</label>
                            <input asp-for="Email" class="form-control joinapp-input" />
                            <span asp-validation-for="Email" class="text-danger joinapp-validation"></span>
                        </div>

                        <div class="form-group mb-3 joinapp-form-group">
                            <label asp-for="Identification" class="form-label joinapp-label">Cedula</label>
                            <input asp-for="Identification" class="form-control joinapp-input" />
                            <span asp-validation-for="Identification" class="text-danger joinapp-validation"></span>
                        </div>

                        <div class="form-group mb-3 joinapp-form-group">
                            <label asp-for="Password" class="form-label joinapp-label">Contraseña</label>
                            <input asp-for="Password" type="password" class="form-control joinapp-input" />
                            <span asp-validation-for="Password" class="text-danger joinapp-validation"></span>
                        </div>

                        <div class="form-group mb-3 joinapp-form-group">
                            <label asp-for="ConfirmPassword" class="form-label joinapp-label">Confirmar Contraseña</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control joinapp-input" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger joinapp-validation"></span>
                        </div>

                        <div class="form-group mb-3 joinapp-form-group">
                            <label asp-for="UserType" class="form-label joinapp-label">Tipo de Usuario</label>
                            <select asp-for="UserType" class="form-control joinapp-input">
                                <option value="0">Seleccione un tipo de usuario</option>
                                <option value="Client">Cliente</option>
                                <option value="Agent">Agente</option>
                            </select>
                            <span asp-validation-for="UserType" class="text-danger joinapp-validation"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100 joinapp-button">Registrar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

