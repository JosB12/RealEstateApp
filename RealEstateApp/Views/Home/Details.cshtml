
@model RealEstateApp.Core.Application.ViewModels.Property.PropertySaveViewModel
@{
    ViewData["Title"] = "Property Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8">
            <!-- Property Image Carousel -->
            <div id="propertyImagesCarousel" class="carousel slide mb-4 shadow-sm" data-bs-ride="carousel">
                <div class="carousel-inner rounded">
                    @for (int i = 0; i < Model.ImageUrls.Count && i < 4; i++)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="@Model.ImageUrls[i]" class="d-block w-100" alt="Property Image @(i + 1)" style="max-height: 500px; object-fit: cover;">
                        </div>
                    }
                </div>
                @if (Model.ImageUrls.Count > 1)
                {
                    <button class="carousel-control-prev" type="button" data-bs-target="#propertyImagesCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#propertyImagesCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                }
            </div>

            <!-- Property Details Card -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">@Model.PropertyCode</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="card-title">Property Information</h5>
                            <dl class="row">
                                <dt class="col-6">Property Type:</dt>
                                <dd class="col-6">@Model.PropertyType</dd>

                                <dt class="col-6">Sale Type:</dt>
                                <dd class="col-6">@Model.SaleType</dd>

                                <dt class="col-6">Price:</dt>
                                <dd class="col-6">@Model.Price.ToString("C0", new System.Globalization.CultureInfo("es-DO"))</dd>

                                <dt class="col-6">Bedrooms:</dt>
                                <dd class="col-6">@Model.Bedrooms</dd>

                                <dt class="col-6">Bathrooms:</dt>
                                <dd class="col-6">@Model.Bathrooms</dd>

                                <dt class="col-6">Size:</dt>
                                <dd class="col-6">@Model.PropertySizeMeters m²</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h5 class="card-title">Description</h5>
                            <p class="text-muted">@Model.Description</p>

                            @if (Model.Improvements != null && Model.Improvements.Any())
                            {
                                <h5 class="card-title mt-3">Improvements</h5>
                                <ul class="list-group list-group-flush">
                                    @foreach (var improvement in Model.Improvements)
                                    {
                                        <li class="list-group-item">@improvement</li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Agent Information Sidebar -->
        <div class="col-lg-4">
            <div class="card text-center mb-4">
                <div class="card-header bg-secondary text-white">
                    <h3 class="mb-0">Agent Contact</h3>
                </div>
                <div class="card-body">
                    <img src="@Model.AgentPhotoUrl" class="rounded-circle mb-3" alt="Agent Photo" style="width: 200px; height: 200px; object-fit: cover;">
                    <h4 class="card-title">@Model.AgentName</h4>
                    <div class="contact-info">
                        <p class="mb-2">
                            <i class="bi bi-telephone-fill me-2"></i>
                            <a href="tel:@Model.AgentPhoneNumber" class="text-decoration-none">@Model.AgentPhoneNumber</a>
                        </p>
                        <p>
                            <i class="bi bi-envelope-fill me-2"></i>
                            <a href="mailto:@Model.AgentEmail" class="text-decoration-none">@Model.AgentEmail</a>
                        </p>
                    </div>
                    <button class="btn btn-primary mt-3">Contact Agent</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.1/js/bootstrap.bundle.min.js"></script>
}